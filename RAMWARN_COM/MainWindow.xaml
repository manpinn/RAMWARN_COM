<Window x:Class="RAMWARN_COM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAMWARN_COM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   FontSize="24"
                   Margin="10"><Run Text="Welcome to RAMWARN" /><Run Text=" " /><Run Language="de-de"
                                                                                     Text=" !" /></TextBlock>
        <Button Grid.Row="1" Grid.Column="0" Content="Click Me!" Margin="10" Click="Button_Click"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Margin="10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True" />
        <StackPanel Grid.Column="1" Grid.Row="1
                    " Margin="10">
            <TextBlock Text="RAM Usage:"
                       FontWeight="Bold" />
            <TextBlock Name="RamTextBlock"
                       FontSize="16"
                       Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
